# João Macarrão Backend - Environment Variables
# Copie este arquivo para .env e preencha com seus valores

# Django
SECRET_KEY=django-insecure-change-this-to-a-secure-random-key-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
# Opção 1: Use DATABASE_URL (formato: postgresql://user:pass@host:port/dbname)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/joao_macarrao

# Opção 2: Use variáveis individuais
DB_NAME=joao_macarrao
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Storage Backend (local, cloudinary, s3)
STORAGE_BACKEND=local

# Cloudinary (se STORAGE_BACKEND=cloudinary)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# AWS S3 (se STORAGE_BACKEND=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# Payment Gateways
# Stripe
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Mercado Pago
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_PUBLIC_KEY=

# Backend URL (for webhooks)
BACKEND_URL=http://localhost:8000

